generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Main {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String?  @db.VarChar(255)
  content   String
  gallery   String[]
}

model User {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  name      String
  email     String?  @unique
  tel       String?  @unique
  position  String?
  role      Role     @default(USER)
  posts     Post[]
  avatar    String[]
}

model Post {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String   @db.VarChar(255)
  content   String
  gip       String?
  gap       String?
  thumbnail String[]
  gallery   String[]
  author    User?    @relation(fields: [authorId], references: [id])
  type      Type
  authorId  Int?
  isOnMain  Boolean @default(false)
}

model News {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String   @db.VarChar(255)
  content   String
  thumbnail String[]
}

model Download {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  title     String   @db.VarChar(255)
  content   String
  name      String
  path      String
  thumbnail String[]
}

model Contacts {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  point     String
  email     String   @db.VarChar(255)
  phone     String?  @db.VarChar(255)
}

model About {
  id        Int      @id @default(autoincrement())
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
  address   String   @db.VarChar(255)
  phone     String   @db.VarChar(255)
  email     String   @db.VarChar(255)
  yandex    String
  // published Boolean? @default(false)
}

enum Role {
  USER
  ADMIN
}

enum Type {
  HOUSE
  OFFICE
  MARKET
  PUBLIC
}
